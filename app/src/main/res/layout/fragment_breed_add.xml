<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.breeds.add.BreedAddFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:padding="0dp"
                app:columnCount="3"
                app:flow_horizontalGap="15dp"
                app:useDefaultMargins="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="0">

                    <ImageButton
                        android:id="@+id/boBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:minHeight="48dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_baseline_arrow_back_24"
                        android:text="Button"
                        tools:ignore="TouchTargetSizeCheck" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ajouter une race"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="0" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="0">

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:minHeight="48dp"
                        android:scaleType="fitCenter"
                        android:src="@null"
                        android:text="Button"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </RelativeLayout>

            </androidx.gridlayout.widget.GridLayout>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_between_form_items"
                android:ems="10"
                android:hint="Nom"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="@dimen/margin_between_form_items">

                <AutoCompleteTextView
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:hint="Catégorie"
                    android:inputType="none"
                    android:padding="0dp"
                    android:textSize="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_between_form_items"
                android:ems="10"
                android:hint="Lien"
                android:inputType="textUri"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/morphotype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_between_form_items"
                android:ems="10"
                android:hint="Morphotype"
                android:inputType="text"
                android:minHeight="48dp"
                android:scrollbars="vertical" />

            <EditText
                android:id="@+id/classification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_between_form_items"
                android:ems="10"
                android:hint="Classification"
                android:inputType="text"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/femaleMinSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_between_form_items"
                android:ems="10"
                android:hint="Taille minimale femelle"
                android:inputType="number"
                android:minHeight="48dp"
                android:scrollbars="vertical" />
            <EditText
                android:id="@+id/femaleMaxSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_between_form_items"
                android:ems="10"
                android:hint="Taille maximale femelle"
                android:inputType="number"
                android:minHeight="48dp"
                android:scrollbars="vertical" />
            <EditText
                android:id="@+id/maleMinSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_between_form_items"
                android:ems="10"
                android:hint="Taille minimale mâle"
                android:inputType="number"
                android:minHeight="48dp"
                android:scrollbars="vertical" />
            <EditText
                android:id="@+id/maleMaxSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_between_form_items"
                android:ems="10"
                android:hint="Taille maximale mâle"
                android:inputType="number"
                android:minHeight="48dp"
                android:scrollbars="vertical" />
            <EditText
                android:id="@+id/femaleMinWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_between_form_items"
                android:ems="10"
                android:hint="Poids minimum femelle"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:scrollbars="vertical" />
            <EditText
                android:id="@+id/femaleMaxWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_between_form_items"
                android:ems="10"
                android:hint="Poids maximum femelle"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:scrollbars="vertical" />
            <EditText
                android:id="@+id/maleMinWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_between_form_items"
                android:ems="10"
                android:hint="Poids minimum mâle"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:scrollbars="vertical" />
            <EditText
                android:id="@+id/maleMaxWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_between_form_items"
                android:ems="10"
                android:hint="Poids maximum mâle"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:scrollbars="vertical" />
            <EditText
                android:id="@+id/lifeExpectancy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_between_form_items"
                android:ems="10"
                android:hint="Espérance de vie"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:scrollbars="vertical" />

            <Button
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bottom_margin_form_buttom"
                android:text="Créer" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
