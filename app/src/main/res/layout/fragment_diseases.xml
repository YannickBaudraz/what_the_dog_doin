<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.diseases.DiseasesFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:adjustViewBounds="true"
                android:padding="0dp"
                app:columnCount="3"
                app:flow_horizontalGap="15dp"
                app:useDefaultMargins="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="0">

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:minHeight="48dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_baseline_arrow_back_24"
                        android:text="Button"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textDiseases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maladies"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="0" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="0">

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:minHeight="48dp"
                        android:scaleType="fitCenter"
                        android:src="@android:drawable/ic_input_add"
                        android:text="Button"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </RelativeLayout>

            </androidx.gridlayout.widget.GridLayout>

            <Button
                android:id="@+id/buttonDisease1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:text="Anémie du chien"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="26sp" />

            <Button
                android:id="@+id/buttonDisease2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:text="Arthrose du chien"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="26sp" />

            <Button
                android:id="@+id/buttonDisease3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:text="Arthrite du chien"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="26sp" />

            <Button
                android:id="@+id/buttonDisease4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:text="Crise d’épilepsie"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="26sp" />

            <Button
                android:id="@+id/buttonDisease5"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:text="Dépression du chien"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="26sp" />

            <Button
                android:id="@+id/buttonDisease6"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:text="Diabète du chien"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="26sp" />

            <Button
                android:id="@+id/buttonDisease7"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:text="Dysplasie de la hanche"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="26sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>