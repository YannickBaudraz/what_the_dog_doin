<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.breeds.BreedsFragment">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_dogs">

        <TextView
            android:id="@+id/lblOrderBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:labelFor="@+id/spnOrderBy"
            android:text="Trier par" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp">

            <AutoCompleteTextView
                android:id="@+id/spnOrderBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:inputType="none"
                android:padding="0dp"
                android:text="Trier"
                android:textSize="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_dogs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Liste des races"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="181dp"
        android:layout_marginEnd="174dp"
        android:layout_marginBottom="70dp"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/floatingActionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0"
        app:useDefaultMargins="true">

        <Button
            android:id="@+id/button28"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:text="Button"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/button35"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:text="Button"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/button36"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:text="Button"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/button37"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:text="Button"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/button38"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:text="Button"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/button39"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:text="Button"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button40"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:text="Button"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button41"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:text="Button"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/button42"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:text="Button"
            app:layout_column="0"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>